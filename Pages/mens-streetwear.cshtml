<!DOCTYPE html>
<html lang="en">
<head>
    <title>MENS - Streetwear</title>

    <link rel="stylesheet" href="productpage.css">
    <script src="productpage.js" defer></script>
</head>
<body>
    <section class="page-content">
        <div class="product-video">
            <video class="" controls autoplay loop>
                <source src="assets/mens-streetwear-vid.mp4" type="video/mp4">
                Your browser does not support videos.
            </video>
        </div>

        <section class="catalogue-container">
            <article id="block1" class="product-block">
                <img class="product-image" src="assets/mens1.jpg" alt=""></img>
                <div class="product-details">
                    <p>@Model.Id</p>
                    <p>@Model.Price</p>
                    <i class="uil uil-shopping-basket" title="Add to Basket"></i>
                </div>
            </article>
            <article id="block2" class="product-block">
                <img class="product-image" src="assets/paul-volkmer-updW-QUccFE-unsplash.jpg" alt=""></img>
                <div class="product-details">
                    <p>Nike Jordans Red + White</p>
                    <p>£99.99</p>
                    <i class="uil uil-shopping-basket" title="Add to Basket"></i>
                </div>
            </article>
            <article id="block3" class="product-block">
                <img class="product-image" src="assets/grailify-UwnvYQg-oYE-unsplash.jpg" alt=""></img>
                <div class="product-details">
                    <p>Air Force 1s White</p>
                    <p>£90.00</p>
                    <i class="uil uil-shopping-basket" title="Add to Basket"></i>
                </div>
            </article>
            <article id="block4" class="product-block">
                <img class="product-image" src="assets/banner.jpg" alt=""></img>
                <div class="product-details">
                    <p>Nike Running Shoes</p>
                    <p>£50.00</p>
                    <i class="uil uil-shopping-basket" title="Add to Basket"></i>
                </div>
            </article>
            <article id="block5" class="product-block">
                <img class="product-image" src="assets/hello-i-m-nik-Bx6Wdnoa3RA-unsplash.jpg" alt=""></img>
                <div class="product-details">
                    <p>Vans Black</p>
                    <p>£55.00</p>
                    <i class="uil uil-shopping-basket" title="Add to Basket"></i>
                </div>
            </article>
            <article id="block6" class="product-block">
                <img class="product-image" src="assets/hello-i-m-nik-VaiyGl1tUaI-unsplash.jpg" alt=""></img>
                <div class="product-details">
                    <p>Adidas Black+White</p>
                    <p>£60.00</p>
                    <i class="uil uil-shopping-basket" title="Add to Basket"></i>
                </div>
            </article>
        </section>
    </section>
</body>
</html>